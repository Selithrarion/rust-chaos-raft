{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "chaos raft",
  "version": "1.0.0",
  "identifier": "com.selithrarion.hft-matching",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm --filter frontend dev",
    "beforeBuildCommand": "pnpm --filter frontend build"
  },
  "app": {
    "windows": [
      {
        "title": "chaos raft",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
